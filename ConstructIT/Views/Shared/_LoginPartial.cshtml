@using Microsoft.AspNet.Identity
@using ConstructIT.DAL.Models
@if (Session["korisnik"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        Korisnik korisnik = (Korisnik)Session["korisnik"];

    <ul class="nav navbar-nav navbar-right" style="position:relative; left:-10px">
        <li>
            @Html.ActionLink("Dobrodošli, " + korisnik.KorisnikIme + "!", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>
        <li>@Html.ActionLink("Odjavite se", "Logout", "Session")</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Prijavite se", "Login", "Session", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
