@using Microsoft.AspNet.Identity
@using ConstructIT.DAL.Models
@if (Session["korisnik"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        Korisnik korisnik = (Korisnik)Session["korisnik"];

    <ul class="nav navbar-nav navbar-right" style="position:relative; left:-10px">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Korisnici <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li>@Html.ActionLink("Pregled korisnika", "Index", "Korisnik")</li>
                <li>@Html.ActionLink("Kreiraj novog", "Create", "Korisnik")</li>
            </ul>
        </li>

        <li>
        <li>@Html.ActionLink("Odjavite se", "Logout", "Session")</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Prijavite se", "Login", "Session", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
