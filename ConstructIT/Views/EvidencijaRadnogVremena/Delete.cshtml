@model ConstructIT.DAL.Models.EvidencijaRadnogVremena

@{
    ViewBag.Title = "Brisanje stavke evidencije radnog vremena";
}

<h2>Brisanje</h2>

<h3 style="padding-left: 3%">Da li ste sigurni da želite da obrišete?</h3>
<div>
    <h4>Stavka evidencije radnog vremena</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            MBR - @Html.DisplayNameFor(model => model.ProizvodniRadnik.ProizRadIme) @Html.DisplayNameFor(model => model.ProizvodniRadnik.ProizRadPrezime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProizvodniRadnik.ProizvodniRadnikID) - @Html.DisplayFor(model => model.ProizvodniRadnik.ProizRadIme) @Html.DisplayFor(model => model.ProizvodniRadnik.ProizRadPrezime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zadatak.Projekat.ProjekatNaziv)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zadatak.Projekat.ProjekatNaziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zadatak.ZadatakNaziv)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zadatak.ZadatakNaziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EvRadnVrDatum)
        </dt>

        <dd>
            @Model.EvRadnVrDatum.ToString("dd.MM.yyyy.")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EvRadnVrVremeOd)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EvRadnVrVremeOd):00
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EvRadnVrVremeDo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EvRadnVrVremeDo):00
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-default" /> |
            @Html.ActionLink("Odustani", "Index")
        </div>
    }
</div>
