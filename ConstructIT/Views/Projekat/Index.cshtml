@model IEnumerable<ConstructIT.DAL.Models.Projekat>

@{
    ViewBag.Title = "Projekti";
}

<h2>Projekti</h2>

<p>
    @Html.ActionLink("Kreiraj novi", "Create")
</p>

<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjekatNaziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjekatOpis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjekatAdresa)
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.ProjekatNaziv, "Details", new { id = item.ProjekatID })
        </td>
        <td>

            @if (item.ProjekatOpis.Length > 105)
            {
                @item.ProjekatOpis.Substring(0, 100)@:...
            }
            else
            {
                @Html.DisplayFor(modelItem => item.ProjekatOpis)
            }



        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjekatAdresa)
        </td>
    </tr>
}

</table>
