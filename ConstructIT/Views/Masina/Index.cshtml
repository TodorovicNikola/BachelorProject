@model IEnumerable<ConstructIT.DAL.Models.Masina>

@{
    ViewBag.Title = "Masine";
}

<h2>Mašine</h2>

<p>
    @Html.ActionLink("Dodaj novu", "Create")
</p>


@using (Html.BeginForm("Index", "Masina", FormMethod.Post, new { @class = "searchForm form-inline" }))
{
    <div class="form-group">
        <div class="input-group">
            <input type="text" class="form-control input-sm" placeholder="Pretraga..." name="parametarPretrage">
            <span class="input-group-btn">
                <button class="btn btn-success btn-sm" type="submit">Pretraži</button>
            </span>
        </div>
    </div>
}

<hr />

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipMasine.TipMasineNaziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MasinaProizvodjac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MasinaOpis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MasinaDostupnaKolicina)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipMasine.TipMasineNaziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MasinaProizvodjac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MasinaOpis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MasinaDostupnaKolicina)
        </td>
        <td>
            @Html.ActionLink("Izmeni", "Edit", new { id=item.MasinaID }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.MasinaID })
        </td>
    </tr>
}

</table>
