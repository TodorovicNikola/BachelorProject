@model IEnumerable<ConstructIT.DAL.Models.PotrebaTipaMasine>

@{
    ViewBag.Title = "Potrebe tipova mašina";
}

<h2>Potrebe tipova mašina</h2>

@Html.ActionLink("Automatski dodeli za današnji dan", "AutoAssignMachines", "PotrebaTipaMasine")
<hr />

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipMasine.TipMasineNaziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zadatak.Projekat.ProjekatNaziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zadatak.ZadatakNaziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PotrTipaMasOdDatuma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PotrTipaMasDoDatuma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PotrTipaMasKolicina)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipMasine.TipMasineNaziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zadatak.Projekat.ProjekatNaziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zadatak.ZadatakNaziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PotrTipaMasOdDatuma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PotrTipaMasDoDatuma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PotrTipaMasKolicina)
        </td>
    </tr>
}

</table>
