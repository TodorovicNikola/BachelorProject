@model ConstructIT.DAL.Models.Zadatak

@{
    ViewBag.Title = "Brisanje zadatka";
}

<h2>Brisanje</h2>

<h3 style="padding-left: 3%">Da li ste sigurni da želite da obrišete?</h3>
<div>

    <hr />
    <h4>Zadatak</h4>
    <br />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Projekat.ProjekatNaziv)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Projekat.ProjekatNaziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZadatakNaziv)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZadatakNaziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZadatakDatumPocetka)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZadatakDatumPocetka)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZadatakDatumZavrsetka)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZadatakDatumZavrsetka)
        </dd>

        <dt>
