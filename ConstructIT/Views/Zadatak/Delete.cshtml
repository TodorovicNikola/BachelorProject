        <dt>
            Dodeljen korisniku
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KorisnikKomJeDodeljen.KorisnikEMail)
        </dd>
    </dl>

    @using (Html.BeginForm(new { id = Model.ZadatakID })) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-default" /> |
            @Html.ActionLink("Odustani", "Details", "Zadatak", new { id = Model.ZadatakID }, null)
        </div>
    }
