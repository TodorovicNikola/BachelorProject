@model ConstructIT.DAL.Models.PotrebaMaterijala

@{
    ViewBag.Title = "Brisanje potrebe materijala";
}

<h2>Brisanje</h2>

<h3 style="padding-left: 3%">Da li ste sigurni da želite da obrišete?</h3>
<div>

    <hr />
    <h4>Potreba materijala</h4>
    <br />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Materijal.MaterijalNaziv)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Materijal.MaterijalNaziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zadatak.ZadatakNaziv)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zadatak.ZadatakNaziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PotrMatOdDatuma)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PotrMatOdDatuma)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PotrMatDoDatuma)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PotrMatDoDatuma)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PotrMatKolicina)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PotrMatKolicina)
        </dd>

    </dl>

    @using (Html.BeginForm( new { potrebaTipaMaterijalaID = Model.PotrebaMaterijalaID } )) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-default" /> |
            @Html.ActionLink("Odustani", "Details", "Zadatak", new { id = Model.ZadatakID }, null)
        </div>
    }
</div>
