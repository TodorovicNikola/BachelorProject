@model IEnumerable<ConstructIT.DAL.Models.PotrebaMaterijala>

@{
    ViewBag.Title = "Potrebe materijala";
}

<h2>Potrebe materijala</h2>
@Html.ActionLink("Automatski dodeli za današnji dan", "AutoAssignMaterial", "PotrebaMaterijala")
<hr />

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Materijal.MaterijalNaziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zadatak.ZadatakNaziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PotrMatKolicina)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Materijal.MaterijalNaziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zadatak.ZadatakNaziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PotrMatKolicina)
        </td>
    </tr>
}

</table>
