@model ConstructIT.DAL.Models.PotrebaStruke

@{
    ViewBag.Title = "Brisanje potrebe struke";
}

<h2>Brisanje</h2>

<h3 style="padding-left: 3%">Da li ste sigurni da želite da obrišete?</h3>
<div>

    <hr />
    <h4>Potreba struke</h4>
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Struka.StrukaNaziv)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Struka.StrukaNaziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zadatak.ZadatakNaziv)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zadatak.ZadatakNaziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PotrebaStrukeOdDatuma)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PotrebaStrukeOdDatuma)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PotrebaStrukeDoDatuma)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PotrebaStrukeDoDatuma)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PotrebaStrukeKolicina)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PotrebaStrukeKolicina)
        </dd>

    </dl>

    @using (Html.BeginForm( new { id = Model.PotrebaStrukeID } )) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-default" /> |
            @Html.ActionLink("Odustani", "Details", "Zadatak", new { id = Model.ZadatakID }, null)
        </div>
    }
</div>
