@model IEnumerable<ConstructIT.DAL.Models.PotrebaStruke>

@{
    ViewBag.Title = "Potrebe struka";
}

<h2>Potrebe struka</h2>
@Html.ActionLink("Automatski dodeli za današnji dan", "AutoAssignWorkers", "PotrebaStruke")
<hr/>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Struka.StrukaNaziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zadatak.Projekat.ProjekatNaziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zadatak.ZadatakNaziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PotrebaStrukeOdDatuma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PotrebaStrukeDoDatuma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PotrebaStrukeKolicina)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Struka.StrukaNaziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zadatak.Projekat.ProjekatNaziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zadatak.ZadatakNaziv)
        </td>
        <td>
            @item.PotrebaStrukeOdDatuma.ToString("dd.MM.yyyy.")
        </td>
        <td>
            @item.PotrebaStrukeDoDatuma.ToString("dd.MM.yyyy.")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PotrebaStrukeKolicina)
        </td>
    </tr>
}

</table>
