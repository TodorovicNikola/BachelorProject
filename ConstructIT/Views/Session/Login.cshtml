
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form class="form-horizontal" method="post" action="@Url.Action("Login", "Session")">
    <fieldset>
        <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">E-Mail</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="inputEmail" name="email" placeholder="E-Mail">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-lg-2 control-label">Lozinka</label>
            <div class="col-lg-10">
                <input type="password" class="form-control" id="inputPassword" name="lozinka" placeholder="Lozinka">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Potvrdi" class="btn btn-primary" />
                @if (ViewData["Visibility"] == "visible")
            {
                    <div class="alert alert-dismissible alert-warning" style="width:30%; position:relative; top:15px;">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h4>Greška!</h4>
                        <p>Uneseni 'E-Mail' ili 'Lozinka' nisu ispravni!</p>
                    </div>
                }
            </div>
            
        </div>
    </fieldset>
</form>




